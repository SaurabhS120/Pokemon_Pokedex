        <com.example.pokemon.presentation.CustomProgressBar android:id="@+id/hpPreogress" android:layout_height="20sp" android:layout_weight="1"  android:layout_width="100sp" android:layout_margin="10sp"/>
    </TableRow>

    <TableRow>
