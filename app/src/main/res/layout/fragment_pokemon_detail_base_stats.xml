        <TextView android:textAlignment="center" android:id="@+id/totalTextView" android:text="00" android:layout_margin="10sp"/>
        <com.example.pokemon.presentation.CustomProgressBar android:id="@+id/totalProgress" android:layout_height="20sp" android:layout_weight="1"  android:layout_width="100sp" android:layout_margin="10sp"/>
    </TableRow>


</TableLayout>