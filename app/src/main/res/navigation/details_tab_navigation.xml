<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_tab_navigation"
    app:startDestination="@id/pokemonDetailsAboutFragment">

    <fragment
        android:id="@+id/pokemonDetailsAboutFragment"
        android:name="com.example.pokemon.presentation.ui.detailsFragments.PokemonDetailsAboutFragment"
        android:label="fragment_pokemon_details_about"
        tools:layout="@layout/fragment_pokemon_details_about" >

        <action
            android:id="@+id/pokemonDetailBaseStatsAction"
            app:destination="@id/pokemonDetailBaseStatsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/pokemonDetailBaseStatsFragment"
        android:name="com.example.pokemon.presentation.ui.detailsFragments.PokemonDetailBaseStatsFragment"
        android:label="fragment_pokemon_detail_base_stats"
        tools:layout="@layout/fragment_pokemon_detail_base_stats" >

        <action
            android:id="@+id/pokemonDetailsAboutAction"
            app:destination="@id/pokemonDetailsAboutFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>
</navigation>